<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/task_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:paddingRight="60dp"
                android:text="Арт терапия для детей"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/title"
                android:layout_below="@+id/title"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:layout_toStartOf="@+id/imageView5"
                android:gravity="left|center"
                android:text="ООО “Мир”"
                app:layout_constraintLeft_toRightOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/company"
                android:layout_alignTop="@+id/imageView4"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="8dp"
                android:layout_toStartOf="@+id/imageView6"
                android:gravity="left|center"
                android:text="Ул. Рылеева 8 Ул. Рылеева 8 Ул. Рылеева 8"
                app:layout_constraintLeft_toRightOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/company" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/duration"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="0dp"
                android:layout_toStartOf="@+id/duration"
                android:tint="@color/colorPrimary"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toRightOf="@+id/company"
                app:layout_constraintRight_toLeftOf="@+id/duration"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:srcCompat="@drawable/ic_alarm" />

            <TextView
                android:id="@+id/comments"
                android:layout_width="75dp"
                android:layout_height="24dp"
                android:layout_alignTop="@+id/imageView7"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_toEndOf="@+id/imageView7"
                android:gravity="left|center"
                android:text="5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toRightOf="@+id/started_at"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/participants" />

            <TextView
                android:id="@+id/duration"
                android:layout_width="75dp"
                android:layout_height="24dp"
                android:layout_alignEnd="@+id/title"
                android:layout_below="@+id/title"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="8dp"
                android:gravity="left|center"
                android:text="1 часоў"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toRightOf="@+id/company"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/title"
                android:layout_below="@+id/company"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="8dp"
                android:tint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/title"
                app:layout_constraintTop_toBottomOf="@+id/company"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_location" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imageView5"
                android:layout_alignTop="@+id/address"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:tint="@color/colorPrimary"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toRightOf="@+id/address"
                app:layout_constraintRight_toLeftOf="@+id/participants"
                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                app:srcCompat="@drawable/ic_supervisor_account" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imageView6"
                android:layout_alignTop="@+id/started_at"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:tint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toRightOf="@+id/started_at"
                app:layout_constraintRight_toLeftOf="@+id/comments"
                app:layout_constraintTop_toBottomOf="@+id/imageView6"
                app:srcCompat="@drawable/ic_chat_bubble" />

            <TextView
                android:id="@+id/started_at"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignStart="@+id/address"
                android:layout_below="@+id/address"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="12dp"
                android:gravity="left|center"
                android:text="Когда: 21 мая 2017"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toRightOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/address" />

            <TextView
                android:id="@+id/participants"
                android:layout_width="75dp"
                android:layout_height="24dp"
                android:layout_alignTop="@+id/imageView6"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="0dp"
                android:layout_toEndOf="@+id/imageView6"
                android:gravity="left|center"
                android:text="1/15"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toRightOf="@+id/address"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/duration" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
